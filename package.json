{
  "name": "wgpu-matrix",
  "version": "1.0.0",
  "description": "fast matrix math library for WebGPU",
  "main": "dist/1.x/wgpu-matrix.module.js",
  "module": "dist/1.x/wgpu-matrix.module.js",
  "types": "dist/1.x/wgpu-matrix.d.ts",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "rollup -c",
    "check": "npm run lint",
    "check-ci": "npm run pre-push",
    "docs": "typedoc --disableSources src/wgpu-matrix.ts",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "pre-push": "npm run lint && npm run test && npm run build && npm run docs",
    "rollup-watch": "rollup -c -w",
    "start": "rollup -c rollup.config.js -w",
    "test": "mocha test/tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/greggman/wgpu-matrix.git"
  },
  "files": [
    "dist/**"
  ],
  "keywords": [
    "webgpu",
    "matrix",
    "math",
    "gpu",
    "3d",
    "graphics"
  ],
  "author": "Gregg Tavares",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/greggman/wgpu-matrix/issues"
  },
  "homepage": "https://github.com/greggman/wgpu-matrix#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^9.0.2",
    "@tsconfig/recommended": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.27.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-one-variable-per-var": "^0.0.3",
    "eslint-plugin-optional-comma-spacing": "^0.0.4",
    "eslint-plugin-require-trailing-comma": "^0.0.1",
    "express": "^4.18.2",
    "mocha": "^10.1.0",
    "rollup": "^3.2.5",
    "tslib": "^2.4.1",
    "typedoc": "^0.23.20",
    "typescript": "^4.8.4"
  }
}
